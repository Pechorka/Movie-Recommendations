<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.NoActionBar.StatusBarTranslucent" parent="AppTheme">
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="MovieInfoPoster">
        <item name="android:layout_width">@dimen/poster_width</item>
        <item name="android:layout_height">@dimen/poster_height</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="Header" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">@dimen/title_font_size</item>
    </style>

    <style name="InfoHintHeader" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/fact_hint_header_text_size</item>
    </style>

    <style name="InfoHint" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">@dimen/fact_hint_text_size</item>
    </style>

    <style name="InfoFact" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:textSize">@dimen/fact_text_size</item>
    </style>

    <style name="GenreButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:background">@drawable/genre_button</item>
        <item name="android:paddingTop">@dimen/genre_button_padding_top_bottom</item>
        <item name="android:paddingBottom">@dimen/genre_button_padding_top_bottom</item>
        <item name="android:paddingLeft">@dimen/genre_button_padding_left_right</item>
        <item name="android:paddingRight">@dimen/genre_button_padding_left_right</item>
        <item name="android:textSize">@dimen/genre_button_text_size</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:lines">1</item>
    </style>

    <style name="SlidingUpButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:padding">@dimen/sliding_button_padding</item>
        <item name="android:layout_marginLeft">@dimen/sliding_button_marginLeft</item>
        <item name="android:layout_marginBottom">@dimen/sliding_button_marginBottom</item>
        <item name="android:layout_marginTop">@dimen/sliding_button_marginTop</item>
        <item name="android:background">@drawable/sliding_up_button</item>
        <item name="android:textSize">@dimen/sliding_button_textSize</item>
    </style>


</resources>
