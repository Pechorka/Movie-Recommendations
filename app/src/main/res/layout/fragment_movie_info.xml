<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/content_top_padding"
        android:paddingStart="@dimen/content_left_padding"
        android:paddingEnd="@dimen/content_left_padding"
        android:paddingLeft="@dimen/content_left_padding"
        android:paddingRight="@dimen/content_left_padding"
        android:background="@color/colorBackground"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <android.support.v7.widget.CardView
                android:id="@+id/movie_info_poster_placeholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="0dp"
                card_view:cardCornerRadius="0dp"
                card_view:cardElevation="5dp"
                android:layout_margin="20dp"
                >

            <ImageView
                style="@style/MovieInfoPoster"
                android:id="@+id/movie_info_poster"
                />

            </android.support.v7.widget.CardView>

            <TextView
                style="@style/Header"
                android:id="@+id/movie_info_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/movie_info_poster_placeholder"
                android:layout_toRightOf="@id/movie_info_poster_placeholder"
                android:layout_alignTop="@id/movie_info_poster_placeholder"
                android:paddingTop="0dp"
                android:gravity="left"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/movie_info_release_date"
                android:layout_below="@id/movie_info_name"
                android:textColor="@color/colorTextSecondary"
                android:layout_alignStart="@id/movie_info_name"
                android:layout_alignLeft="@id/movie_info_name"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/movie_info_overview"
                android:layout_below="@id/movie_info_poster_placeholder"
                android:textSize="@dimen/overview_font_size"
                android:textAlignment="center"/>

            <org.apmem.tools.layouts.FlowLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/movie_info_genres_placeholder"
                android:layout_below="@id/movie_info_release_date"
                android:layout_alignLeft="@id/movie_info_release_date"
                android:paddingTop="@dimen/content_top_padding"
                >
            </org.apmem.tools.layouts.FlowLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/movie_info_vote_average"
                android:layout_below="@id/movie_info_genres_placeholder"
                android:layout_alignLeft="@id/movie_info_genres_placeholder"
                android:textSize="@dimen/vote_average_text_size"/>

        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>


    <RelativeLayout
        android:id="@+id/movie_info_progress_bar_placeholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground">
        <ProgressBar
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

</RelativeLayout>