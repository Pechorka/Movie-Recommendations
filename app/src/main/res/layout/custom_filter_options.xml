<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ru.surf.course.movierecommendations.custom_views.YearsRangeBar
        android:id="@+id/years_rb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/genres_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/choose_genres" />

    <Button
        android:id="@+id/sort_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/choose_sort" />


</LinearLayout>