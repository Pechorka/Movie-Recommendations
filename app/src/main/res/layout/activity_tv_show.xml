<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 android:background="@color/colorBackground">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/tv_show_appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/tv_show_collapsing_toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|enterAlwaysCollapsed"
            app:statusBarScrim="@color/colorAccent">

            <ImageView
                android:id="@+id/tv_show_backdrop"
                android:layout_width="match_parent"
                android:layout_height="@dimen/tv_show_info_appbar_height"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.5" />


        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/status_bar_height">

            <TextView
                android:id="@+id/tv_show_title"
                style="@style/Header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/back_button_size"
                android:layout_marginStart="@dimen/back_button_size"
                android:layout_marginRight="@dimen/back_button_size"
                android:layout_marginEnd="@dimen/back_button_size"
                android:gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:paddingBottom="0dp"/>


            <TextView
                android:id="@+id/tv_show_original_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_show_title"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorTextSecondary"
                android:textSize="@dimen/tv_show_info_release_date_text_size" />

            <TextView
                android:id="@+id/tv_show_release_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_show_original_title"
                android:layout_centerHorizontal="true"
                android:layout_gravity="bottom|center_horizontal"
                android:textColor="@color/colorTextSecondary"
                android:textSize="@dimen/tv_show_info_release_date_text_size" />

            <android.support.v4.view.ViewPager
                android:id="@+id/tv_show_info_infos_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/tv_show_release_date">

                <android.support.design.widget.TabLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </android.support.v4.view.ViewPager>


        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>


    <RelativeLayout
        android:id="@+id/tv_show_progress_bar_placeholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground">

        <ProgressBar
            android:id="@+id/tv_show_progress_bar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/tv_show_toolbar_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/tv_show_fake_status_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/status_bar_height"
            android:background="@color/colorAccent"
            android:visibility="gone"
            android:alpha="0"/>

        <android.support.v7.widget.Toolbar
            android:id="@+id/tv_show_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorTransparent"/>

    </LinearLayout>

    <include layout="@layout/screen_no_internet"
             android:id="@+id/tv_show_no_internet_screen"
             android:visibility="gone"/>

</android.support.design.widget.CoordinatorLayout>