<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/person_info_backdrop"
                android:layout_width="match_parent"
                android:layout_height="@dimen/person_info_appbar_height"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.3" />


        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:paddingBottom="@dimen/content_top_padding"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <TextView
                android:id="@+id/person_info_name"
                style="@style/Header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/person_info_birth_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/person_info_name"
                android:layout_gravity="bottom|center_horizontal"
                android:textColor="@color/colorTextSecondary"
                android:textSize="@dimen/movie_info_release_date_text_size" />

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/person_info_birth_date"
                android:layout_margin="8dp"
                android:background="@color/cardview_dark_background"
                app:cardElevation="8dp"
                app:contentPadding="16dp">


                <at.blogc.android.views.ExpandableTextView
                    android:id="@+id/person_info_biography"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="5"
                    android:paddingEnd="@dimen/content_left_padding"
                    android:paddingLeft="@dimen/content_left_padding"
                    android:paddingRight="@dimen/content_left_padding"
                    android:paddingStart="@dimen/content_left_padding"
                    android:textAlignment="center"
                    android:textSize="@dimen/overview_font_size"
                    app:animation_duration="1000" />

                <Button
                    android:id="@+id/person_info_biography_expand_btn"
                    android:layout_width="@dimen/expand_button_width"
                    android:layout_height="@dimen/expand_button_width"
                    android:layout_below="@id/person_info_biography"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/ic_arrow_down"
                    android:visibility="gone" />


            </android.support.v7.widget.CardView>
        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

    <RelativeLayout
        android:id="@+id/person_info_progress_bar_placeholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground">

        <ProgressBar
            android:id="@+id/person_info_progress_bar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/person_info_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorTransparent"
        app:layout_collapseMode="pin" />

</android.support.design.widget.CoordinatorLayout>