<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:card_view="http://schemas.android.com/apk/res-auto"
  android:id="@+id/recommendations_setup_list_element_cardview"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_margin="3dp"
  android:orientation="vertical"
  card_view:cardCornerRadius="0dp"
  card_view:cardUseCompatPadding="true">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
      android:id="@+id/recommendations_setup_list_element_image"
      style="@style/GridListElementImage" />
    <ImageView
      android:id="@+id/recommendations_setup_list_element_chosen"
      android:layout_alignBottom="@+id/recommendations_setup_list_element_image"
      android:layout_alignTop="@+id/recommendations_setup_list_element_image"
      android:layout_alignRight="@+id/recommendations_setup_list_element_image"
      android:layout_alignLeft="@+id/recommendations_setup_list_element_image"
      android:visibility="invisible"
      android:src="@drawable/choosen"
      style="@style/GridListElementImage" />
  </RelativeLayout>

</android.support.v7.widget.CardView>