<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/movie_info_backdrop_placeholder"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="0dp"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="@dimen/movie_info_images_list_item_margin"
    android:layout_marginRight="@dimen/movie_info_images_list_item_margin"
    android:layout_marginEnd="@dimen/movie_info_images_list_item_margin"
    android:layout_marginLeft="@dimen/movie_info_images_list_item_margin"
    android:layout_marginStart="@dimen/movie_info_images_list_item_margin"
    >

        <ImageView
            android:layout_width="@dimen/backdrop_width"
            android:layout_height="@dimen/backdrop_height"
            android:scaleType = "fitCenter"
            android:gravity = "center_horizontal"
            android:id="@+id/movie_info_backdrop"
            />
</android.support.v7.widget.CardView>