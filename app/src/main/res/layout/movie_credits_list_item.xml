<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="@dimen/people_list_item_width"
  android:layout_height="@dimen/people_list_item_height"
  android:orientation="vertical">

  <de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/circle_images_list_image"
    android:layout_width="@dimen/people_profile_picture_size"
    android:layout_height="@dimen/people_profile_picture_size"
    android:layout_gravity="center"
    android:background="@drawable/ic_person" />

  <TextView
    android:id="@+id/circle_images_list_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:maxLines="2"
    android:textColor="@color/colorTextPrimary"
    android:textSize="@dimen/movie_info_people_header_text_size" />

  <TextView
    android:id="@+id/circle_images_list_sub_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:maxLines="2"
    android:textColor="@color/colorTextSecondary"
    android:textSize="@dimen/movie_info_people_sub_header_text_size" />

</LinearLayout>