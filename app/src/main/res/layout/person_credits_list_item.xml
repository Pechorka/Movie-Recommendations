<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/credits_movies_list_item_card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardview_dark_background"
    app:contentPadding="@dimen/credits_list_item_content_padding"
    app:cardElevation="@dimen/credits_list_item_card_elevation"
    android:layout_marginBottom="@dimen/credits_list_item_spacing">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/credits_movies_list_item_image"
            android:layout_width="@dimen/credits_list_poster_width"
            android:layout_height="@dimen/credits_list_poster_height"
            android:background="@color/colorBackgroundDark"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/credits_movies_list_item_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/credits_movies_list_item_image"
            android:layout_toEndOf="@id/credits_movies_list_item_image"
            android:textSize="@dimen/credits_list_item_header_text_size"
            android:textColor="@color/colorTextPrimary"
            android:layout_marginLeft="@dimen/credits_list_item_header_margin_start"
            android:layout_marginStart="@dimen/credits_list_item_header_margin_start"/>

        <TextView
            android:id="@+id/credits_movies_list_item_sub_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/credits_movies_list_item_header"
            android:layout_alignLeft="@id/credits_movies_list_item_header"
            android:layout_below="@id/credits_movies_list_item_header"
            android:textSize="@dimen/credits_list_item_sub_header_text_size"
            android:textColor="@color/colorTextSecondary"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>