<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/recycler_item_seasons_card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardview_dark_background"
    app:contentPadding="@dimen/seasons_list_item_content_padding"
    app:cardElevation="@dimen/seasons_list_item_card_elevation"
    android:layout_marginBottom="@dimen/seasons_list_item_spacing">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/recycler_item_seasons_image"
            android:layout_width="@dimen/seasons_list_poster_width"
            android:layout_height="@dimen/seasons_list_poster_height"
            android:background="@color/colorBackgroundDark"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/recycler_item_seasons_season_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/recycler_item_seasons_image"
            android:layout_toEndOf="@id/recycler_item_seasons_image"
            android:textSize="@dimen/seasons_list_item_header_text_size"
            android:textColor="@color/colorTextPrimary"
            android:layout_marginLeft="@dimen/seasons_list_item_header_margin_start"
            android:layout_marginStart="@dimen/seasons_list_item_header_margin_start"
            android:text="@string/season"/>

        <TextView
            android:id="@+id/recycler_item_seasons_number_of_season"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/seasons_list_item_header_text_size"
            android:textColor="@color/colorTextPrimary"
            android:layout_toRightOf="@id/recycler_item_seasons_season_hint"
            android:layout_toEndOf="@id/recycler_item_seasons_season_hint"
            android:layout_alignBaseline="@id/recycler_item_seasons_season_hint"
            android:layout_marginLeft="@dimen/small_space"
            android:layout_marginStart="@dimen/small_space"/>

        <TextView
            android:id="@+id/recycler_item_seasons_air_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/recycler_item_seasons_season_hint"
            android:layout_alignLeft="@id/recycler_item_seasons_season_hint"
            android:layout_below="@id/recycler_item_seasons_season_hint"
            android:textSize="@dimen/seasons_list_item_sub_header_text_size"
            android:textColor="@color/colorTextSecondary"/>

        <TextView
            android:id="@+id/recycler_item_seasons_separator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/recycler_item_seasons_air_year"
            android:layout_toEndOf="@id/recycler_item_seasons_air_year"
            android:layout_alignBaseline="@id/recycler_item_seasons_air_year"
            android:layout_marginLeft="@dimen/small_space"
            android:layout_marginStart="@dimen/small_space"
            android:layout_marginRight="@dimen/small_space"
            android:layout_marginEnd="@dimen/small_space"
            android:textSize="@dimen/seasons_list_item_sub_header_text_size"
            android:textColor="@color/colorTextSecondary"
            android:text="@string/separator"/>

        <TextView
            android:id="@+id/recycler_item_seasons_number_of_episodes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/recycler_item_seasons_separator"
            android:layout_toEndOf="@id/recycler_item_seasons_separator"
            android:layout_alignBaseline="@id/recycler_item_seasons_air_year"
            android:textSize="@dimen/seasons_list_item_sub_header_text_size"
            android:textColor="@color/colorTextSecondary"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>