<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="ru.surf.course.movierecommendations">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name="ru.surf.course.movierecommendations.app.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.screen.main.MainActivityView"/>
        <activity
            android:name=".ui.screen.gallery.GalleryActivityView"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"/>
        <activity
            android:name=".ui.screen.movie.MovieActivityView"
            android:theme="@style/AppTheme.NoActionBar.StatusBarTranslucent"/>
        <activity
            android:name=".ui.screen.person.PersonActivityView"
            android:theme="@style/AppTheme.NoActionBar.StatusBarTranslucent"/>
        <activity
            android:name=".ui.screen.tvShow.TvShowActivity"
            android:theme="@style/AppTheme.NoActionBar.StatusBarTranslucent"/>
        <activity android:name=".ui.screen.settings.SettingsActivity"/>
        <activity
            android:name=".ui.screen.customFilter.CustomFilterActivityView"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>
        <activity
            android:name=".ui.screen.favorites.FavoritesActivityView"
            android:parentActivityName=".ui.screen.main.MainActivityView">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.screen.main.MainActivityView"/>
        </activity>
        <activity android:name=".ui.screen.splash.SplachActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.screen.recommendationsSetup.RecommendationsSetupActivity"></activity>
    </application>

</manifest>